{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "notes_input.schema.json",
  "title": "Presenter Notes Writer Input Schema",
  "description": "Schema for presenter_notes_writer agent input - generates verbatim presenter notes for slides",
  "type": "object",
  "required": ["metadata", "slide", "requirements"],
  "properties": {
    "metadata": {
      "type": "object",
      "required": ["agent", "section_name", "date"],
      "properties": {
        "agent": {
          "type": "string",
          "const": "presenter_notes_writer"
        },
        "section_name": {
          "type": "string"
        },
        "section_number": {
          "type": "integer"
        },
        "slide_number": {
          "type": "integer"
        },
        "date": {
          "type": "string",
          "format": "date"
        }
      }
    },
    "slide": {
      "type": "object",
      "required": ["slide_number", "slide_type", "header", "body"],
      "properties": {
        "slide_number": {
          "type": "integer"
        },
        "slide_type": {
          "type": "string",
          "enum": ["section_intro", "content", "vignette", "answer"]
        },
        "subsection": {
          "type": "string"
        },
        "header": {
          "type": "string"
        },
        "body": {
          "type": "string"
        },
        "nclex_tip": {
          "type": "string"
        },
        "anchors_covered": {
          "type": "array",
          "items": { "type": "string" }
        },
        "visual_type": {
          "type": "string",
          "description": "If slide contains a visual, what type"
        }
      }
    },
    "requirements": {
      "type": "object",
      "properties": {
        "max_words": {
          "type": "integer",
          "default": 450
        },
        "max_seconds": {
          "type": "integer",
          "default": 180
        },
        "must_be_verbatim": {
          "type": "boolean",
          "default": true
        },
        "require_pause_markers": {
          "type": "boolean",
          "default": true
        },
        "require_emphasis_markers": {
          "type": "boolean",
          "default": true
        },
        "require_transitions": {
          "type": "boolean",
          "default": true
        }
      }
    },
    "context": {
      "type": "object",
      "properties": {
        "previous_slide_notes": {
          "type": "string",
          "description": "For transition continuity"
        },
        "next_slide_topic": {
          "type": "string",
          "description": "For transition planning"
        },
        "anchor_details": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "anchor_number": { "type": "integer" },
              "anchor_text": { "type": "string" }
            }
          }
        }
      }
    }
  }
}
