{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "pedagogy_output.schema.json",
  "title": "Pedagogy Checker Output Schema",
  "description": "Schema for pedagogy_checker agent output - pedagogical validation results",
  "type": "object",
  "required": ["metadata", "results", "summary"],
  "properties": {
    "metadata": {
      "type": "object",
      "required": ["agent", "section_name", "date"],
      "properties": {
        "agent": {
          "type": "string",
          "const": "pedagogy_checker"
        },
        "section_name": {
          "type": "string"
        },
        "section_number": {
          "type": "integer"
        },
        "date": {
          "type": "string",
          "format": "date"
        }
      }
    },
    "results": {
      "type": "object",
      "required": ["overall_status", "pedagogy_score"],
      "properties": {
        "overall_status": {
          "type": "string",
          "enum": ["PASS", "FAIL"]
        },
        "pedagogy_score": {
          "type": "integer",
          "minimum": 0,
          "maximum": 100
        },
        "bloom_coverage": {
          "type": "object",
          "properties": {
            "remember": { "type": "boolean" },
            "understand": { "type": "boolean" },
            "apply": { "type": "boolean" },
            "analyze": { "type": "boolean" },
            "evaluate": { "type": "boolean" },
            "create": { "type": "boolean" }
          }
        },
        "principle_adherence": {
          "type": "object",
          "properties": {
            "scaffolding": { "type": "boolean" },
            "repetition": { "type": "boolean" },
            "application": { "type": "boolean" },
            "clinical_connection": { "type": "boolean" },
            "nclex_relevance": { "type": "boolean" }
          }
        }
      }
    },
    "summary": {
      "type": "object",
      "properties": {
        "bloom_levels_addressed": {
          "type": "integer"
        },
        "bloom_levels_required": {
          "type": "integer"
        },
        "principles_met": {
          "type": "integer"
        },
        "principles_total": {
          "type": "integer"
        },
        "anchors_with_clinical_connection": {
          "type": "integer"
        },
        "anchors_total": {
          "type": "integer"
        }
      }
    },
    "issues": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/pedagogy_issue"
      }
    },
    "recommendations": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Suggestions for pedagogical improvement"
    }
  },
  "definitions": {
    "pedagogy_issue": {
      "type": "object",
      "required": ["issue_type", "description"],
      "properties": {
        "slide_number": {
          "type": "integer"
        },
        "issue_type": {
          "type": "string",
          "enum": ["missing_bloom_level", "missing_principle", "no_clinical_connection", "no_nclex_relevance", "poor_scaffolding"]
        },
        "description": {
          "type": "string"
        },
        "severity": {
          "type": "string",
          "enum": ["low", "medium", "high"]
        }
      }
    }
  }
}
