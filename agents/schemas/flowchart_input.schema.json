{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "flowchart_input.schema.json",
  "title": "Flowchart Generator Input Schema",
  "description": "Input schema for the flowchart_generator agent in the NCLEX pipeline",
  "type": "object",
  "required": ["slide_context", "process_data"],
  "properties": {
    "slide_context": {
      "type": "object",
      "required": ["slide_number", "section_name", "title"],
      "properties": {
        "slide_number": {
          "type": "integer",
          "minimum": 1,
          "description": "Slide number within the section"
        },
        "section_name": {
          "type": "string",
          "minLength": 1,
          "description": "Name of the section this slide belongs to"
        },
        "section_number": {
          "type": "integer",
          "minimum": 1,
          "description": "Section number"
        },
        "title": {
          "type": "string",
          "maxLength": 64,
          "description": "Slide title"
        },
        "domain": {
          "type": "string",
          "enum": ["fundamentals", "pharmacology", "medical_surgical", "ob_maternity", "pediatric", "mental_health"],
          "description": "NCLEX content domain"
        }
      }
    },
    "process_data": {
      "type": "object",
      "required": ["process_name", "steps"],
      "properties": {
        "process_name": {
          "type": "string",
          "maxLength": 50,
          "description": "Name of the process being visualized"
        },
        "start_label": {
          "type": "string",
          "maxLength": 12,
          "default": "START",
          "description": "Label for the start node"
        },
        "end_label": {
          "type": "string",
          "maxLength": 12,
          "default": "END",
          "description": "Label for the end node"
        },
        "steps": {
          "type": "array",
          "minItems": 3,
          "maxItems": 7,
          "description": "Sequential steps in the process",
          "items": {
            "type": "object",
            "required": ["header", "body"],
            "properties": {
              "header": {
                "type": "string",
                "maxLength": 20,
                "description": "Step header (1-3 words)"
              },
              "body": {
                "type": "string",
                "maxLength": 50,
                "description": "Step description (25 chars/line, 2 lines max)"
              },
              "substeps": {
                "type": "array",
                "maxItems": 3,
                "items": {
                  "type": "object",
                  "properties": {
                    "text": {
                      "type": "string",
                      "maxLength": 25
                    }
                  }
                },
                "description": "Optional substeps for Layout C"
              }
            }
          }
        },
        "connector_labels": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "from_step": {
                "type": "integer"
              },
              "to_step": {
                "type": "integer"
              },
              "label": {
                "type": "string",
                "maxLength": 15
              }
            }
          },
          "description": "Optional labels for transitions between steps"
        },
        "process_type": {
          "type": "string",
          "enum": ["sequential", "procedural", "pathway", "causal_chain"],
          "description": "Type of process being visualized"
        }
      }
    },
    "layout_preference": {
      "type": "string",
      "enum": ["A", "B", "C", "D", "E", "AUTO"],
      "default": "AUTO",
      "description": "Preferred layout: A=Linear Horizontal (3-4), B=Linear Vertical (4-6), C=Horizontal with Substeps, D=Snake/Zigzag (5-7), E=Branching Linear, AUTO=auto-select"
    }
  }
}
