{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://theater-pipeline/schemas/agenda_input.schema.json",
  "title": "Agenda Slide Input Schema",
  "description": "HARDCODED schema for agenda slide generation input. All fields are validated during pipeline execution.",
  "type": "object",
  "required": [
    "unit_number",
    "unit_name",
    "day_number",
    "total_days",
    "lesson_topic",
    "learning_objectives"
  ],
  "properties": {
    "unit_number": {
      "type": "integer",
      "minimum": 1,
      "maximum": 4,
      "description": "Unit number (1-4)"
    },
    "unit_name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 50,
      "description": "Unit name (e.g., 'Greek Theater', 'Romeo and Juliet')"
    },
    "day_number": {
      "type": "integer",
      "minimum": 1,
      "maximum": 30,
      "description": "Day number within unit"
    },
    "total_days": {
      "type": "integer",
      "minimum": 1,
      "maximum": 30,
      "description": "Total days in unit"
    },
    "lesson_topic": {
      "type": "string",
      "minLength": 1,
      "maxLength": 100,
      "description": "Lesson topic/title"
    },
    "learning_objectives": {
      "type": "array",
      "minItems": 1,
      "maxItems": 3,
      "items": {
        "type": "string",
        "minLength": 1,
        "maxLength": 50
      },
      "description": "1-3 measurable learning objectives (HARDCODED limit)"
    },
    "warmup_type": {
      "type": "string",
      "enum": ["physical", "vocal", "mental", "ensemble", "character"],
      "default": "physical",
      "description": "Type of warmup activity"
    },
    "warmup_connection": {
      "type": "string",
      "maxLength": 100,
      "description": "How warmup connects to lesson content"
    },
    "activity_type": {
      "type": "string",
      "enum": [
        "gallery_walk",
        "jigsaw",
        "partner_work",
        "group_discussion",
        "scene_work",
        "tableau",
        "hot_seat",
        "fishbowl",
        "stations",
        "performance"
      ],
      "default": "group_discussion",
      "description": "Type of activity"
    },
    "activity_topic": {
      "type": "string",
      "maxLength": 100,
      "description": "Specific focus of activity"
    },
    "additional_materials": {
      "type": "array",
      "maxItems": 3,
      "items": {
        "type": "string",
        "maxLength": 50
      },
      "description": "Additional materials beyond required defaults"
    },
    "class_period": {
      "type": "string",
      "enum": ["standard", "block", "shortened", "extended"],
      "default": "standard",
      "description": "Class period type (determines timing)"
    }
  },
  "additionalProperties": false,
  "_hardcoded_rules": {
    "R1": "unit_number must be 1-4",
    "R2": "day_number must be 1-30",
    "R3": "learning_objectives must have 1-3 items",
    "R4": "Each objective must be under 50 characters",
    "R5": "class_period determines timing configuration"
  }
}
