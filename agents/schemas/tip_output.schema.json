{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "tip_output.schema.json",
  "title": "Tip Generator Output Schema",
  "description": "Schema for tip_generator agent output - generated NCLEX exam tips",
  "type": "object",
  "required": ["metadata", "tip", "validation"],
  "properties": {
    "metadata": {
      "type": "object",
      "required": ["agent", "section_name", "slide_number", "date"],
      "properties": {
        "agent": {
          "type": "string",
          "const": "tip_generator"
        },
        "section_name": {
          "type": "string"
        },
        "section_number": {
          "type": "integer"
        },
        "slide_number": {
          "type": "integer"
        },
        "date": {
          "type": "string",
          "format": "date"
        }
      }
    },
    "tip": {
      "type": "object",
      "required": ["text", "line_count", "chars_per_line"],
      "properties": {
        "text": {
          "type": "string",
          "description": "The NCLEX tip text"
        },
        "line_count": {
          "type": "integer"
        },
        "chars_per_line": {
          "type": "array",
          "items": { "type": "integer" }
        },
        "tip_category": {
          "type": "string",
          "enum": ["test_strategy", "priority_setting", "safety", "delegation", "assessment", "intervention"],
          "description": "Category of NCLEX tip"
        }
      }
    },
    "validation": {
      "type": "object",
      "required": ["status"],
      "properties": {
        "status": {
          "type": "string",
          "enum": ["PASS", "FAIL"]
        },
        "checks": {
          "type": "object",
          "properties": {
            "within_char_limit": { "type": "boolean" },
            "within_line_limit": { "type": "boolean" },
            "is_relevant": { "type": "boolean" },
            "is_actionable": { "type": "boolean" }
          }
        },
        "issues": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    }
  }
}
