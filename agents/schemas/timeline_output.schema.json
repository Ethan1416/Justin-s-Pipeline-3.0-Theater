{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "timeline_output.schema.json",
  "title": "Timeline Generator Output Schema",
  "description": "Output schema for the timeline_generator agent in the NCLEX pipeline",
  "type": "object",
  "required": ["visual_spec", "validation", "presenter_notes"],
  "properties": {
    "visual_spec": {
      "type": "object",
      "required": ["type", "layout", "title", "data"],
      "properties": {
        "type": {
          "type": "string",
          "const": "TIMELINE"
        },
        "layout": {
          "type": "string",
          "enum": ["A", "B", "C", "D", "E"],
          "description": "Selected layout: A=Horizontal, B=Vertical, C=Era Blocks, D=Developmental Stages, E=Milestone"
        },
        "title": {
          "type": "string",
          "maxLength": 50,
          "description": "Timeline title"
        },
        "data": {
          "type": "object",
          "required": ["events"],
          "properties": {
            "start_label": {
              "type": "string",
              "maxLength": 15
            },
            "end_label": {
              "type": "string",
              "maxLength": 15
            },
            "events": {
              "type": "array",
              "minItems": 3,
              "maxItems": 8,
              "items": {
                "type": "object",
                "required": ["header", "date"],
                "properties": {
                  "event_number": {
                    "type": "integer",
                    "minimum": 1
                  },
                  "header": {
                    "type": "string",
                    "maxLength": 22
                  },
                  "date": {
                    "type": "string",
                    "maxLength": 15
                  },
                  "description": {
                    "type": "string",
                    "maxLength": 56
                  },
                  "features": {
                    "type": "array",
                    "items": {
                      "type": "string",
                      "maxLength": 30
                    }
                  }
                }
              }
            },
            "eras": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "maxLength": 20
                  },
                  "date_range": {
                    "type": "string",
                    "maxLength": 15
                  },
                  "events": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  }
                }
              },
              "description": "Era data for Layout C"
            }
          }
        }
      }
    },
    "validation": {
      "type": "object",
      "required": ["is_valid", "checks"],
      "properties": {
        "is_valid": {
          "type": "boolean",
          "description": "Overall validation status"
        },
        "checks": {
          "type": "object",
          "properties": {
            "event_count_valid": {
              "type": "boolean",
              "description": "Event count within 3-8 range"
            },
            "header_char_limits": {
              "type": "boolean",
              "description": "All headers within 22 char limit"
            },
            "date_char_limits": {
              "type": "boolean",
              "description": "All dates within 15 char limit"
            },
            "description_char_limits": {
              "type": "boolean",
              "description": "All descriptions within 56 char limit"
            },
            "chronological_order": {
              "type": "boolean",
              "description": "Events are in chronological order"
            },
            "layout_compatible": {
              "type": "boolean",
              "description": "Event count compatible with selected layout"
            }
          }
        },
        "warnings": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "errors": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "presenter_notes": {
      "type": "object",
      "required": ["text", "word_count"],
      "properties": {
        "text": {
          "type": "string",
          "description": "Presenter notes walking through timeline events"
        },
        "word_count": {
          "type": "integer",
          "minimum": 150,
          "maximum": 450
        },
        "estimated_duration_seconds": {
          "type": "integer",
          "minimum": 60,
          "maximum": 180
        }
      }
    },
    "rendering_metadata": {
      "type": "object",
      "properties": {
        "font_sizes": {
          "type": "object",
          "properties": {
            "era_header": { "type": "integer" },
            "date_label": { "type": "integer" },
            "event_text": { "type": "integer" },
            "milestone_label": { "type": "integer" }
          }
        },
        "colors": {
          "type": "object",
          "properties": {
            "timeline_bar_rgb": {
              "type": "array",
              "items": { "type": "integer" },
              "description": "RGB(74, 20, 140) - Deep Purple"
            },
            "event_marker_rgb": {
              "type": "array",
              "items": { "type": "integer" },
              "description": "RGB(123, 31, 162) - Purple"
            },
            "card_background_rgb": {
              "type": "array",
              "items": { "type": "integer" },
              "description": "RGB(243, 229, 245) - Light Purple"
            }
          }
        }
      }
    }
  }
}
