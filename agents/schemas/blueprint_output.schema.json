{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "blueprint_output.schema.json",
  "title": "Step 6 Blueprint Generation Output Schema",
  "description": "Schema for blueprint_generator agent output - slide-by-slide content specification",
  "type": "object",
  "required": ["metadata", "blueprint", "summary", "next_step"],
  "properties": {
    "metadata": {
      "type": "object",
      "required": ["step", "domain", "section_number", "section_name", "date"],
      "properties": {
        "step": {
          "type": "string",
          "const": "Step 6: Blueprint Generation"
        },
        "domain": {
          "type": "string",
          "enum": ["fundamentals", "pharmacology", "medical_surgical", "ob_maternity", "pediatric", "mental_health"]
        },
        "section_number": {
          "type": "integer",
          "minimum": 1
        },
        "section_name": {
          "type": "string",
          "minLength": 1
        },
        "date": {
          "type": "string",
          "format": "date"
        },
        "delivery_mode": {
          "type": "string",
          "enum": ["foundational", "full", "minor", "one_and_done"]
        }
      }
    },
    "blueprint": {
      "type": "object",
      "required": ["total_slides", "slides"],
      "properties": {
        "total_slides": {
          "type": "integer",
          "minimum": 1
        },
        "slides": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/definitions/slide"
          }
        }
      }
    },
    "summary": {
      "type": "object",
      "properties": {
        "total_anchors_covered": {
          "type": "integer"
        },
        "slide_breakdown": {
          "type": "object",
          "properties": {
            "section_intro": { "type": "integer" },
            "content": { "type": "integer" },
            "vignette": { "type": "integer" },
            "answer": { "type": "integer" }
          }
        },
        "subsection_count": {
          "type": "integer"
        }
      }
    },
    "next_step": {
      "type": "object",
      "required": ["step_number", "step_name"],
      "properties": {
        "step_number": {
          "type": "number",
          "const": 6.5
        },
        "step_name": {
          "type": "string",
          "const": "Line Enforcement"
        }
      }
    }
  },
  "definitions": {
    "slide": {
      "type": "object",
      "required": ["slide_number", "slide_type", "header", "body"],
      "properties": {
        "slide_number": {
          "type": "integer",
          "minimum": 1
        },
        "slide_label": {
          "type": "string"
        },
        "slide_type": {
          "type": "string",
          "enum": ["section_intro", "content", "vignette", "answer"]
        },
        "subsection": {
          "type": "string"
        },
        "header": {
          "$ref": "#/definitions/text_element"
        },
        "body": {
          "$ref": "#/definitions/text_element"
        },
        "nclex_tip": {
          "$ref": "#/definitions/text_element"
        },
        "presenter_notes": {
          "$ref": "#/definitions/notes_element"
        },
        "anchors_covered": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "visual_placeholder": {
          "type": "boolean",
          "default": false
        }
      }
    },
    "text_element": {
      "type": "object",
      "properties": {
        "text": { "type": "string" },
        "line_count": { "type": "integer" },
        "chars_per_line": {
          "type": "array",
          "items": { "type": "integer" }
        }
      }
    },
    "notes_element": {
      "type": "object",
      "properties": {
        "text": { "type": "string" },
        "word_count": { "type": "integer" },
        "estimated_seconds": { "type": "integer" }
      }
    }
  }
}
