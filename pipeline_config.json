      "session_max": 90,
      "total_min": 144,
      "total_max": 180
    },
    "sections": {
      "min_sections": 4,
      "max_sections": 12,
      "formula": "total_anchors / 15-20",
      "note": "Section count is dynamic based on anchor count. Use 12 slides min for 4 or fewer sections, 10 slides min for 5+ sections."
    },
    "visual_quotas": {
      "note": "MANDATORY - Every section must have at least the minimum number of graphic organizers",
      "by_section_size": {
        "12-15_slides": {
          "minimum": 2,
          "target_min": 3,
          "target_max": 4
        },
        "16-20_slides": {
          "minimum": 3,
          "target_min": 4,
          "target_max": 5
        },
        "21-25_slides": {
          "minimum": 3,
          "target_min": 5,
          "target_max": 6
        },
        "26-35_slides": {
          "minimum": 4,
          "target_min": 6,
          "target_max": 8
        }
      },
      "enforcement": "If a section has fewer than minimum visuals, Step 9 output is INCOMPLETE",
      "proactive_triggers": [
        "Any slide with 4+ bullet points -> TABLE",
        "Any slide comparing 2+ items -> TABLE or KEY_DIFFERENTIATORS",
        "Any slide listing criteria/symptoms/features -> TABLE",
        "Any slide with process/sequence -> FLOWCHART",
        "Any slide with diagnostic criteria -> DECISION_TREE or TABLE",
        "Any slide with similar disorders -> KEY_DIFFERENTIATORS"
      ]
    }
  },
  "validation_settings": {
